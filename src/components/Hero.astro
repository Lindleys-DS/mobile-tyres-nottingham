---
import Registration from "../components/hero-forms/Registration.astro"
import TyreSize from "../components/hero-forms/TyreSize.astro"
import Tyreclick from "../components/hero-forms/Tyreclick.astro"

export interface Props {
    heading: string,
    tagline: string,
    bgImg: string,
    formOption: string,
}

const { heading, tagline, bgImg, formOption = "registration" } = Astro.props;
---

<section id="heroSection" class="bg-overlay d-flex align-items-center">
    <div class="container">
        <div class="row g-3 py-5">
            <!-- Content -->
            <div class="col-12 col-lg-6 d-flex justify-content-center flex-column align-items-center align-items-lg-start text-light">
                <h2 class="display-5 fw-bold text-center text-lg-start">{heading}</h2>
                <p class="lead text-center fs-3 text-lg-start">{tagline}</p>
                <!-- Reviews -->
                <div class="bg-white p-2 fw-bold text-dark border rounded-3">
                    <span>Rated <i class="bi-star-fill text-warning"></i> <i class="bi-star-fill text-warning"></i> <i class="bi-star-fill text-warning"></i> <i class="bi-star-fill text-warning"></i> <i class="bi-star-fill text-warning"></i> on Google</span>
                </div>
                <!-- Features -->
                <div class="d-none d-lg-block d-xl-flex mt-3">
                    <p class="mb-1"><i class="bi bi-clock me-2"></i> Same Day Service</p>
                    <p class="mb-1 mx-xl-3"><i class="bi bi-calendar-check me-2"></i> Open 6 Days</p>
                    <p class="mb-1"><i class="bi bi-map me-2"></i> We Cover Nottingham</p>
                </div>
            </div>
            <!-- Form -->
            <div class="col-12 offset-lg-2 col-lg-4 d-flex justify-content-center align-items-center flex-column">
                { formOption === "registration" && <Registration />}
                { formOption === "tyresize" && <TyreSize />}
                { formOption === "tyreclick" && <Tyreclick />}
            </div>
        </div>
    </div>
</section>

<style define:vars={{bgImg}}>
    .bg-overlay {
        box-shadow: inset 0 0 0 2000px rgba(33, 37, 41, 0.85);
    }

    #heroSection {
        background-image: var(--bgImg);
        background-size: cover;
        background-position: center;
        min-height: 70vh;
    }
</style>