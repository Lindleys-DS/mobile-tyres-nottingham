---
import Layout from "../layouts/Layout.astro"
import Hero from "../components/Hero.astro"
import Testimonials from "../components/Testimonials.astro"
import CTA from "../components/CTA.astro"

const title = "Locking Wheel Nut Removal In Nottingham"
const description = "If you've lost or broken your locking wheel nut key, we can come to you today. Our technicians can remove lockers on a wide range of car makes and models."
const index = true
const bgImg = "url('/img/mobile-tyre-fitting-van.jpg')"
const heading = "Lost Your Locking Wheel Nut?"
const tagline = "We can come to you and remove your lockers today"
const formOption = "registration"
const mainHeading = "Locking Wheel Nut Removal In Nottingham"
---

<Layout title={title} description={description} index={index}>
    <Hero heading={heading} tagline={tagline} bgImg={bgImg} formOption={formOption} />
    <div class="container py-5">
        <div class="row">
            <main class="col-12 col-lg-8">
                <h1 class="text-center text-lg-start">{mainHeading}</h1>
