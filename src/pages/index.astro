---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Navbar from "../components/Navbar.astro"
import Hero from "../components/Hero.astro"
import Features from "../components/Features.astro"
---

<Layout title="Home - Mobile Tyres Nottingham">
	<Header />
	<Navbar />
	<main>
		<!-- Hero -->
		<Hero heading="Welcome to Mobile Tyres Nottingham" subheading="Tired of waiting in a garage? Have your tyres fitted at home instead!" formStyle="online" />
		<!-- Features -->
		<Features />
		<!-- Introduction -->
		<section class="container my-5">
			<div class="row g-4">
				<div class="col-12 bg-secondary text-light border p-4">
					<h2>State of the art equipment</h2>
					<p>All of our vans are equipped with the best equipment and technology money can buy. You can rest assured that the job will be done to the highest standards by our trained experts.</p>
				</div>
				<div class="col-12">
					<img src="/imgs/mobile-tyre-equipment.webp" class="w-100" alt="Lindley's mobile tyre fitting van">
				</div>
			</div>			
		</section>
	</main>
</Layout>